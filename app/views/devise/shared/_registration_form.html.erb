<h5><strong>New to Twitter?</strong> Sign Up</h5>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'form-control-sm' } }) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :username, required: true, autofocus: true, placeholder: 'Username', label: false %>
  <%= f.input :email, required: true, placeholder: 'Email', label: false %>
  <%= f.input :password, required: true, placeholder: 'Password', label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  <%= f.input :password_confirmation, required: true, placeholder: 'Password Confirmation', label: false %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Sign up", class: 'btn btn-sm btn-primary' %>
</div>
<% end %>
