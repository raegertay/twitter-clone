<div class="input-group">
  <input type="text" class="form-control" placeholder="Search following..." aria-label="Search following...">
  <span class="input-group-btn">
    <button class="btn btn-secondary" type="button">Go!</button>
  </span>
</div>

<br />

<div class="following list-group">
  <% current_user.followings.order(created_at: :desc).each do |user| %>
  <div class='list-group-item d-flex justify-content-between align-items-center'>
    <div>
      <%= image_tag user.avatar_url, size: '30', class: 'rounded-circle' %>&nbsp;
      <%= user.username %>
    </div>
    <%= link_to 'Unfollow', unfollow_path(user), class: 'btn btn-outline-danger btn-sm', method: :delete %>
  </div>
  <% end %>
</div>
