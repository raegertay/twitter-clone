<div class='profile card mb-3'>
  <div class='card-body'>
    <%= image_tag(user.avatar_url, size: '150', class: 'avatar rounded-circle mb-3') %>
    <h4 class='card-title'><%= user.username %></h4>
    <%= filestack_picker_element 'Select photo', 'updateAvatar', class: 'btn filestack-btn', pickerOptions: { accept: 'image/*', uploadInBackground: false, transformations: { circle: true } } %>
  </div>

  <div class="list-group list-group-flush">
    <%= link_to user_tweets_path(user), class: 'list-group-item list-group-item-action d-flex justify-content-around align-items-center' do %>
    Tweets<span class="badge badge-primary badge-pill ml-3"><%= user.tweets.count %></span>
    <% end %>
    <%= link_to user_following_path(user), class: 'list-group-item list-group-item-action d-flex justify-content-around align-items-center' do %>
    Following<span class="badge badge-primary badge-pill"><%= user.followings.count %></span>
    <% end %>
    <%= link_to user_follower_path(user), class: 'list-group-item list-group-item-action d-flex justify-content-around align-items-center' do %>
    Followers<span class="badge badge-primary badge-pill"><%= user.followers.count %></span>
    <% end %>
  </div>
</div>
