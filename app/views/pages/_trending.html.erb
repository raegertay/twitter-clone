<h4 class='card-header text-center'>Trends for you</h4>
<ul class="list-group list-group-flush">
  <% Tag.top_10.each do |tag| %>
  <%= link_to tweets_by_tag_path(tag), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do %>
  <object><%= link_to tag.body, tweets_by_tag_path(tag) %></object>
  <span class="badge badge-primary badge-pill"><%= tag.tweets.count %> tweets</span>
  <% end %>
  <% end %>
</ul>
